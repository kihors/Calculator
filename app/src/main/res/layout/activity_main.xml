<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kihors.calculator.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/relativeLayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/editText"
            android:text="0"
            android:inputType="number"
            android:maxLength="9"
            android:fontFamily="sans-serif"
            android:background="@color/colorCalculatorTextNumbers"
            android:textSize="70sp"
            android:textColor="#737373"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="textEnd"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"/>

    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/tableLayout"
        android:layout_below="@+id/relativeLayout"
        android:layout_toStartOf="@+id/linearLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableRowTwo"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonSeven"
                android:text="7"
                android:textColor="@color/colorCalculatorTextNumbers"
                android:background="@color/colorCalculatorNumbers"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_weight="1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonEight"
                android:text="8"
                android:textColor="@color/colorCalculatorTextNumbers"
                android:background="@color/colorCalculatorNumbers"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_weight="1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonNine"
                android:text="9"
                android:textColor="@color/colorCalculatorTextNumbers"
                android:background="@color/colorCalculatorNumbers"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableRowThree"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonFour"
                android:text="4"
                android:textColor="@color/colorCalculatorTextNumbers"
                android:background="@color/colorCalculatorNumbers"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_weight="1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonFive"
                android:text="5"
                android:textColor="@color/colorCalculatorTextNumbers"
                android:background="@color/colorCalculatorNumbers"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_weight="1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonSix"
                android:text="6"
                android:textColor="@color/colorCalculatorTextNumbers"
                android:background="@color/colorCalculatorNumbers"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableRowFour"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonOne"
                android:text="1"
                android:textColor="@color/colorCalculatorTextNumbers"
                android:background="@color/colorCalculatorNumbers"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_weight="1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonTwo"
                android:text="2"
                android:textColor="@color/colorCalculatorTextNumbers"
                android:background="@color/colorCalculatorNumbers"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_weight="1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonThree"
                android:text="3"
                android:textColor="@color/colorCalculatorTextNumbers"
                android:background="@color/colorCalculatorNumbers"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableRowFive"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonDot"
                android:text="."
                android:textColor="@color/colorCalculatorTextNumbers"
                android:background="@color/colorCalculatorActionButton"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_weight="1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonZero"
                android:text="0"
                android:textColor="@color/colorCalculatorTextNumbers"
                android:background="@color/colorCalculatorNumbers"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_weight="1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonEquals"
                android:text="="
                android:textColor="@color/colorCalculatorTextNumbers"
                android:background="@color/colorCalculatorActionButton"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_weight="1"/>

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:id="@+id/buttonClear"
            android:text="C"
            android:textColor="@color/colorCalculatorTextNumbers"
            android:fontFamily="sans-serif"
            android:background="@color/colorCalculatorAccentButton"
            android:textSize="16sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:id="@+id/buttonDiv"
            android:text="/"
            android:textColor="@color/colorCalculatorTextNumbers"
            android:fontFamily="sans-serif"
            android:background="@color/colorCalculatorActionButton"
            android:textSize="16sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:id="@+id/buttonMultiply"
            android:text="X"
            android:textColor="@color/colorCalculatorTextNumbers"
            android:fontFamily="sans-serif"
            android:background="@color/colorCalculatorActionButton"
            android:textSize="16sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:id="@+id/buttonMinus"
            android:text="-"
            android:textColor="@color/colorCalculatorTextNumbers"
            android:fontFamily="sans-serif"
            android:background="@color/colorCalculatorActionButton"
            android:textSize="16sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:id="@+id/buttonPlus"
            android:text="+"
            android:textColor="@color/colorCalculatorTextNumbers"
            android:fontFamily="sans-serif"
            android:background="@color/colorCalculatorActionButton"
            android:textSize="16sp"/>

    </LinearLayout>

</RelativeLayout>
